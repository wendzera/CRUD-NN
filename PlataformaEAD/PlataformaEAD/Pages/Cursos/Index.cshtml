@page
@model PlataformaEAD.Pages.Cursos.IndexModel
@{
    ViewData["Title"] = "Cursos";
}

<h1>Cursos</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Novo Curso</a>
</p>

<form asp-page="./Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" class="form-control" name="SearchString" value="@Model.CurrentFilter" placeholder="Buscar por título ou descrição..." />
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.TitleSort" asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.Cursos[0].Titulo)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cursos[0].PrecoBase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cursos[0].CargaHoraria)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cursos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecoBase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CargaHoraria)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>