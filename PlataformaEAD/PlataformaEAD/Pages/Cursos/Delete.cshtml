@page "{id:int}"
@model PlataformaEAD.Pages.Cursos.DeleteModel
@{
    ViewData["Title"] = "Excluir Curso";
}

<h1>Excluir Curso</h1>

<h3>Tem certeza que deseja excluir este curso?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Curso.Titulo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curso.Titulo)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Curso.Descricao)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curso.Descricao)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Curso.PrecoBase)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curso.PrecoBase)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Curso.CargaHoraria)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curso.CargaHoraria) horas
        </dd>
    </dl>
    
    @if (Model.TemMatriculas)
    {
        <div class="alert alert-warning">
            <strong>Atenção!</strong> Este curso possui matrículas associadas. 
            A exclusão do curso não excluirá as matrículas devido à restrição de exclusão.
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Curso.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>