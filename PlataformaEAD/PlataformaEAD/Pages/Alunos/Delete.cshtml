@page "{id:int}"
@model PlataformaEAD.Pages.Alunos.DeleteModel
@{
    ViewData["Title"] = "Excluir Aluno";
}

<h1>Excluir Aluno</h1>

<h3>Tem certeza que deseja excluir este aluno?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Aluno.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Aluno.Nome)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Aluno.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Aluno.Email)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Aluno.Telefone)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Aluno.Telefone)
        </dd>
    </dl>
    
    @if (Model.TemMatriculas)
    {
        <div class="alert alert-warning">
            <strong>Atenção!</strong> Este aluno possui matrículas associadas. 
            A exclusão do aluno não excluirá as matrículas devido à restrição de exclusão.
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Aluno.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>