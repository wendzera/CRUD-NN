@page
@model PlataformaEAD.Pages.Alunos.CreateModel
@{
    ViewData["Title"] = "Novo Aluno";
}

<h1>Novo Aluno</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Aluno.Nome" class="control-label"></label>
                <input asp-for="Aluno.Nome" class="form-control" />
                <span asp-validation-for="Aluno.Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Aluno.Email" class="control-label"></label>
                <input asp-for="Aluno.Email" class="form-control" />
                <span asp-validation-for="Aluno.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Aluno.Telefone" class="control-label"></label>
                <input asp-for="Aluno.Telefone" class="form-control" />
                <span asp-validation-for="Aluno.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}