@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
    </div>

    <!-- Cartões de Estatísticas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total de Alunos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["TotalAlunos"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total de Cursos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["TotalCursos"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total de Matrículas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["TotalMatriculas"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-graduate fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Matrículas Ativas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewData["MatriculasAtivas"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ações Rápidas -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-plus-circle"></i> Ações Rápidas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Alunos" asp-action="Create" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-user-plus"></i><br>
                                Novo Aluno
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Cursos" asp-action="Create" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-book-plus"></i><br>
                                Novo Curso
                            </a>
                        </div>
                        <div class="col-md-12">
                            <a asp-controller="Matriculas" asp-action="Create" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-graduation-cap"></i>
                                Nova Matrícula
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle"></i> Sobre o Sistema
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>Plataforma EAD</strong> é um sistema de gestão educacional desenvolvido com:
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> ASP.NET Core MVC</li>
                        <li><i class="fas fa-check text-success"></i> Entity Framework Core</li>
                        <li><i class="fas fa-check text-success"></i> PostgreSQL</li>
                        <li><i class="fas fa-check text-success"></i> Bootstrap 5</li>
                        <li><i class="fas fa-check text-success"></i> Relacionamentos N:N</li>
                        <li><i class="fas fa-check text-success"></i> Validações de negócio</li>
                        <li><i class="fas fa-check text-success"></i> Interface responsiva</li>
                    </ul>
                    
                    <div class="mt-3">
                        <h6>Funcionalidades principais:</h6>
                        <ul class="small">
                            <li>Gestão completa de alunos</li>
                            <li>Catálogo de cursos</li>
                            <li>Sistema de matrículas com progresso</li>
                            <li>Controle de notas e status</li>
                            <li>Busca e filtros</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    
    .text-xs {
        font-size: 0.7rem;
    }
    
    .text-gray-800 {
        color: #5a5c69 !important;
    }
    
    .shadow {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
    }
</style>