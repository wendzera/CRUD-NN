@model PlataformaEAD.Models.Curso

@{
    ViewData["Title"] = "Excluir Curso";
}

<div class="container">
    <h1>Excluir Curso</h1>

    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i>
        Tem certeza que deseja excluir este curso?
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => model.Titulo)</h5>
            
            @if (!string.IsNullOrEmpty(Model.Descricao))
            {
                <p class="card-text">@Html.DisplayFor(model => model.Descricao)</p>
            }
            
            <dl class="row">
                <dt class="col-sm-3">Preço Base:</dt>
                <dd class="col-sm-9">R$ @Model.PrecoBase.ToString("N2")</dd>
                
                <dt class="col-sm-3">Carga Horária:</dt>
                <dd class="col-sm-9">@Model.CargaHoraria horas</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Excluir
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancelar
        </a>
    </form>
</div>