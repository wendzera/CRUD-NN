@model PlataformaEAD.Models.Curso

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<div class="container">
    <h1>Detalhes do Curso</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => model.Titulo)</h5>
            
            @if (!string.IsNullOrEmpty(Model.Descricao))
            {
                <p class="card-text">@Html.DisplayFor(model => model.Descricao)</p>
            }
            
            <dl class="row">
                <dt class="col-sm-3">Preço Base:</dt>
                <dd class="col-sm-9">R$ @Model.PrecoBase.ToString("N2")</dd>
                
                <dt class="col-sm-3">Carga Horária:</dt>
                <dd class="col-sm-9">@Model.CargaHoraria horas</dd>
            </dl>
        </div>
    </div>

    @if (Model.Matriculas.Any())
    {
        <div class="card mt-4">
            <div class="card-header">
                <h5>Alunos Matriculados</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Aluno</th>
                                <th>Data Matrícula</th>
                                <th>Preço Pago</th>
                                <th>Progresso</th>
                                <th>Status</th>
                                <th>Nota Final</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var matricula in Model.Matriculas)
                            {
                                <tr>
                                    <td>@matricula.Aluno.Nome</td>
                                    <td>@matricula.Data.ToString("dd/MM/yyyy")</td>
                                    <td>R$ @matricula.PrecoPago.ToString("N2")</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar" role="progressbar" 
                                                 style="width: @matricula.Progresso%;">
                                                @matricula.Progresso%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @switch (matricula.Status)
                                        {
                                            case PlataformaEAD.Models.StatusMatricula.Ativo:
                                                <span class="badge bg-success">Ativo</span>
                                                break;
                                            case PlataformaEAD.Models.StatusMatricula.Concluido:
                                                <span class="badge bg-primary">Concluído</span>
                                                break;
                                            case PlataformaEAD.Models.StatusMatricula.Cancelado:
                                                <span class="badge bg-danger">Cancelado</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (matricula.NotaFinal.HasValue)
                                        {
                                            @matricula.NotaFinal.Value.ToString("N2")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</div>